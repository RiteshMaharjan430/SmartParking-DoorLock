<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
    android:orientation="vertical"
    android:id="@+id/wholelayout"
    android:layout_margin="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Booking Status"
            android:textColor="@color/black"
            android:textSize="70sp" />



    <LinearLayout
        android:id="@+id/linearSlot1"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="650dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Slot 1"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Status: "
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvslot1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Booked: "
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvbook1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="25sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/etCode1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Enter Code of slot 1 to enter: "
                android:gravity="center"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnbook1"
                    android:layout_width="200dp"
                    android:layout_height="90dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Book"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btnopendoor1"
                    android:layout_width="200dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="50dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Open Door"
                    android:textSize="25sp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearslot2"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="650dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:cardElevation="30dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginLeft="90dp"
                android:text="Slot 2"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_marginTop="60dp"
                android:layout_marginLeft="100dp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Status: "
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvslot2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="100dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Booked: "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvbook2"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_width="0dp"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />



            </LinearLayout>


            <EditText
                android:id="@+id/etCode2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Enter Code of slot 2 to enter: "
                android:gravity="center"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnbook2"
                    android:layout_width="200dp"
                    android:layout_height="90dp"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Book" />

                <Button
                    android:id="@+id/btnopendoor2"
                    android:layout_width="200dp"
                    android:layout_marginLeft="50dp"
                    android:layout_height="90dp"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Open Door" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearSlot3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="650dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:cardElevation="30dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Slot 3"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Status: "
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvslot3"
                    android:layout_width="0dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Booked: "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvbook3"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_width="0dp"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


            </LinearLayout>

            <EditText
                android:id="@+id/etCode3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:textSize="25sp"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Enter Code of slot 3 to enter: "
                android:gravity="center"/>

            <LinearLayout
                android:layout_marginTop="200dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnbook3"
                    android:layout_width="200dp"
                    android:layout_height="90dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="25sp"
                    android:text="Book" />

                <Button
                    android:id="@+id/btnopendoor3"
                    android:layout_width="200dp"
                    android:layout_marginLeft="50dp"
                    android:layout_height="90dp"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Open Door" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>


    </LinearLayout>



        <Button

            android:layout_marginLeft="620dp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btngetout"
            android:text="Get Out"

            android:textSize="15sp" />





</LinearLayout>

</ScrollView>